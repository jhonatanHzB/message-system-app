{
    "compilerOptions": {
        "composite": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "allowJs": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "types": ["vite/client"]
    },
    "include": [
        "resources/**/*"
    ],
    "exclude": [
        "node_modules",
        "vendor"
    ]
}
